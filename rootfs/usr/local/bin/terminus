#!/bin/bash

check_image()
{
	VERSION="gearboxworks/terminus:${REQVERS}"
	EXISTS="$(docker images -q ${VERSION} 2>/dev/null)"

	if [ "$EXISTS" == "" ]
	then
		wget -q -O /dev/null https://index.docker.io/v1/repositories/gearboxworks/terminus/tags/$REQVERS
		if [ "$?" == "0" ]
		then
			echo "Gearbox: Need to retrieve $VERSION from repository. Please wait..."
			${DOCKER} pull $VERSION
		else
			echo "Gearbox: ERROR: Version $VERSION doesn't exist in repository."
			exit
		fi
	fi
}

DOCKER="$(which docker)"
DIR="$(dirname $0)"
SCRIPT="$(basename $0)"
REQVERS="$(echo $SCRIPT | sed -E 's/terminus-([0-9]*\.[0-9]*)/\1/')"
EXEC="${DIR}/terminus-${REQVERS}"

if [ -x "$EXEC" ]
then
	check_image
elif [ "$SCRIPT" == "$REQVERS" ]
then
	REQVERS="latest"
	check_image
fi

# exec ${DOCKER} run --rm -it --name "terminus-$REQVERS" --user gearbox:gearbox --volume ${PROJECT_ROOT}:/home/gearbox/projects/default ${VERSION} terminus "$@"
ssh -p $(${DOCKER} port terminus-${REQVERS} 22/tcp | sed 's/0.0.0.0://') gearbox@localhost terminus

